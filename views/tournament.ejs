<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>PlayHive - BGMI Tournament Management</title>
    <link rel="stylesheet" type="text/css" href="/style.css">
</head>
<body>
    <form action="/tournament" method="post">
    <!-- Header Section -->
    <header>
        <div class="container header-content">
            <div class="logo">
                <h1>Play<span>Hive</span></h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/tournament" style="color: var(--secondary);">Tournaments</a></li>
                    <li><a href="/leaderboard">Leaderboard</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                     <% if (locals.currentUser) { %>
                        <li><a  href="/transactions">My Transactions</a></li>
                    <% } %>
                    <% if (locals.currentUser) { %>
                        <!-- <li><a href="/transactions">My Transactions</a></li> -->
                        <% if (currentUser.isAdmin) { %>
                            <li><a href="/admin" style="color: #e11d48; font-weight: bold;">Manage Tournaments</a></li>
                        <% } %>
                    <% } %>
                </ul>
            </nav>
            <div class="auth-buttons">
                <% if (locals.currentUser) { %>
                    <span class="user-welcome">Welcome, <%= currentUser.username %></span>
                    <a href="/logout" class="btn btn-outline">Logout</a>
                <% } else { %>
                    <a href="/login" class="btn btn-outline">Login</a>
                    <a href="/register" class="btn btn-primary">Register</a>
                <% } %>
            </div>
        </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
        </div>
    </section>

    <!-- Tournament Cards Section -->
    <section class="tournaments">
        <div class="container">
            <div class="section-header">
                <h2>Active Tournaments</h2>
            </div>
            <div class="tournament-grid">
                <% tournaments.forEach(function(t) { %>
                <div class="tournament-card">
                    <div class="tournament-map">
                        <img src="/images/<%= t.gamename ? t.gamename.toLowerCase() : 'main' %>.jpg" alt="<%= t.tname %> Map">
                        <div class="map-name"><%= t.tname %></div>
                    </div>
                    <div class="tournament-info">
                        <div class="registration">
                            <div class="price">₹<%= t.entryFee %> Entry</div>
                            <div class="slots">0/100 Registered</div>
                        </div>
                        <div class="progress-container">
                            <div class="progress-bar" style="width: 0%;"></div>
                        </div>
                        <div class="prize-distribution">
                            <h4>Prize Distribution</h4>
                            <ul class="prizes">
                                <li>
                                    <span class="position first">1st Place</span>
                                    <span class="amount">₹<%= t.prize1 %></span>
                                </li>
                                <li>
                                    <span class="position second">2nd Place</span>
                                    <span class="amount">₹<%= t.prize2 %></span>
                                </li>
                                <li>
                                    <span class="position third">3rd Place</span>
                                    <span class="amount">₹<%= t.prize3 %></span>
                                </li>
                            </ul>
                        </div>
                        <a href="/join?id=<%= t._id %>" class="btn btn-primary">Register Now</a>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </section>
</form>
    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>About PlayHive</h3>
                    <p>PlayHive is the premier platform for BGMI tournament management, offering seamless registration, competitive gameplay, and exciting prizes.</p>
                    <div class="social-links">
                        <a href="#"><i>FB</i></a>
                        <a href="#"><i>TW</i></a>
                        <a href="#"><i>IG</i></a>
                        <a href="#"><i>YT</i></a>
                    </div>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <ul class="footer-links">
                        <li><a href="#">Tournaments</a></li>
                        <li><a href="#">Leaderboard</a></li>
                        <li><a href="#">Rules</a></li>
                        <li><a href="#">FAQ</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="footer-section">
                    <h3>Contact Info</h3>
                    <p>Email: playhive@gmail.com</p>
                    <p>Phone: +91 8624077761</p>
                    <p>Address: 123 Gaming Street, Esports City, India</p>
                </div>
            </div>
            <div class="copyright">
                &copy; 2025 PlayHive. All rights reserved.
            </div>
        </div>
    </footer>
